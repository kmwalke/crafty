@import 'variables';

@keyframes notice_fade {
  0% {
    height: 15em;
    opacity: 0%;
    margin-top: 0;
  }
  30% {
    height: 15em;
    opacity: 100%;
    margin-top: 0;
  }
  100% {
    height: 15em;
    opacity: 0%;
    margin-top: -2em;
  }
}


html {
  z-index: 0;
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: $game-bg-color;
  color: $game-text-color;
  font-family: Verdana, Arial, sans-serif;

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    overflow: hidden;

    .scrollable {
      height: 100%;
      width: 100%;
      overflow: scroll;
    }

    ul {
      li {
        list-style: none;
        line-height: 2em;
      }
    }

    .common, .common * {
      color: $common-color !important;
    }

    .uncommon, .uncommon * {
      color: $uncommon-color !important;
    }

    .rare, .rare * {
      color: $rare-color !important;
    }

    .epic, .epic * {
      color: $epic-color !important;
    }

    .legendary, .legendary * {
      color: $legendary-color !important;
    }

    div.notice {
      z-index: $top-z-layer;
      display: flex;
      position: fixed;
      top: 35%;
      left: 50%;
      width: 20em;
      margin-left: -10em;
      height: 0em;
      opacity: 0%;
      justify-content: center;
      align-items: center;
      vertical-align: center;
      animation-name: notice_fade;
      animation-duration: 3s;

      div.notice-popup {
        background-color: $notice-bg-color;
        border: 1px outset $notice-border-color;
        width: 20em;
        height: 5em;
        text-align: center;
        vertical-align: middle;

        span {
          line-height: 5em;
          padding: 0;
          margin: 0
        }

      }
    }

    div.content {
      margin: 0;
      padding: 0;
      padding-left: 2.5%;
      height: 100%;
      width: 95%;
      overflow: hidden;

      div.header {
        height: $header-height;

        div.game-menu {
          display: inline-block;
          vertical-align: top;

          a.button:hover {
            text-shadow: 0 0 7px $game-text-color;
          }

          a.button {
            text-decoration: none;

            span {
              color: $menu-icon-color;
              display: block;
              font-size: 3em;
              letter-spacing: 0.1em;
              line-height: 0.35em;
            }
          }

          span.version {
            display: block;
          }
        }

        .chat-wrapper {
          display: inline-block;
          width: 50%;
          height: 100%;

          div.chatbox {
            display: inline-block;
            width: 100%;
            height: 90%;
            margin-top: 0.25em;
            border: 1px solid $white;
            padding: 0;

            ul {
              height: 75%;
              margin: 0;
              padding: 0.1em;
              overflow: auto;
              display: flex;
              flex-direction: column-reverse;
//              overflow: scroll;
//              display: flex;
//              justify-content: flex-end;
//              flex-direction: column;

              li {
                font-size: small;
                line-height: 1.25em;
              }
            }
          }
        }

        table.bars:hover span.value {
          color: $game-text-color;
          visibility: visible !important;
        }

        table.bars {
          display: inline-block;
          float: right;
          width: 32%;
          border-spacing: 0.5em;

          tbody {
            width: 100%;
            display: table;

            tr {
              td.title {
                float: right;
              }

              td.bar {
                border-radius: 0.6em;
                width: 90%;

                div.fill {
                  border-radius: 0.5em;

                  span.value {
                    margin-left: 0.5em;
                    text-wrap: nowrap;
                    visibility: hidden;
                  }
                }
              }
            }

            tr.energy {
              color: $energy-color;

              td.bar {
                border: 1px solid $energy-color;
                box-shadow: 0 0 5px $energy-color;

                div.fill {
                  background-color: $energy-color;
                }
              }
            }

            tr.vitality {
              color: $vitality-color;

              td.bar {
                border: 1px solid $vitality-color;
                box-shadow: 0 0 5px $vitality-color;

                div.fill {
                  background-color: $vitality-color;
                }
              }
            }

            tr.age {
              color: $age-color;

              td.bar {
                border: 1px solid $age-color;
                box-shadow: 0 0 5px $age-color;

                div.fill {
                  background-color: $age-color;
                }
              }
            }
          }
        }
      }

      .status-crafting {
        color: $orange;
      }

      .status-gathering {
        color: $red;
      }

      .status-traveling {
        color: $blue-light;
      }

      .status-resting {
        color: $green;
      }


      a, a:visited {
        color: $a_color;
        text-decoration: underline;
      }

      a:hover {
        text-decoration: none;
      }

      div.content {
        margin-left: 0.5em;
      }


      div.popup:target {
        display: flex;
      }

      div.popup {
        display: none;
        z-index: $top-z-layer;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        justify-content: center;
        align-items: center;

        div.popup-content {
          background: $popup-bg-color;
          border: 1px solid $popup-border-color;
          padding: 20px;
          border-radius: 5px;
          text-align: center;
          position: fixed;
          max-height: 100%;
          overflow: scroll;

          h4.title {
            width: 100%;
            margin: 0;
            line-height: 2em;
          }
        }
      }

      a.close-button, a.close-button:visited {
        position: absolute;
        top: 0.5em;
        right: 0.5em;
        text-decoration: none;
        background-color: $close-button-bg-color;
        color: $close-button-text-color;
        border: 2px outset black;
        padding: 0.25em 0.5em;
        margin-right: 1em;
      }

      a.close-button:hover {
        text-decoration: underline;
      }

      a.close-button:active {
        border: 2px inset black;
      }
    }
  }
}