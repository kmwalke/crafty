@import 'variables';

@keyframes notice_fade {
  0% {
    height: 15em;
    opacity: 0%;
  }
  30% {
    height: 15em;
    opacity: 100%;
  }
  100% {
    height: 15em;
    opacity: 0%;
  }
}


html {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;

    div.notice {
      display: flex;
      position: fixed;
      top: 0;
      left: 50%;
      width: 20em;
      margin-left: -10em;
      height: 0em;
      opacity: 0%;
      justify-content: center;
      align-items: center;
      vertical-align: center;
      animation-name: notice_fade;
      animation-duration: 3s;

      div.notice-popup {
        background-color: white;
        border: 1px outset black;
        width: 20em;
        height: 5em;
        text-align: center;
        vertical-align: middle;

        span {
          line-height: 5em;
          padding: 0;
          margin: 0
        }

      }
    }

    span.version {
      display: block;
    }

    span.level-color {
      span.common {
        color: $common-color;
      }

      span.uncommon {
        color: $uncommon-color;
      }

      span.rare {
        color: $rare-color;
      }

      span.epic {
        color: $epic-color;
      }

      span.legendary {
        color: $legendary-color;
      }
    }

    div.game-menu {


      nav {
        display: inline-block;
        position: absolute;
        top: 1em;
        right: 1em;
        border: none;

        ul {
          display: flex;
          justify-content: left;
          align-items: center;

          li {
            display: inline-block;
            list-style: none;

          }
        }
      }
    }
  }

  a, a:visited {
    color: black;
    text-decoration: underline;
  }

  a:hover {
    text-decoration: none;
  }

  div.content {
    margin-left: 0.5em;
  }

  .player-card {
    display: block !important;
  }

  .section {
    display: inline-block;
    width: 25em;
    vertical-align: top;
    margin: 2em 3em 0 0;
    background-color: #FFF;
    border: 1px outset black;

    legend {
      font-weight: bold;
      font-variant: small-caps;
      font-size: larger;
      background-color: #EEE;
      border: 1px outset black;
    }

    ul {
      li {
        list-style: none;
        line-height: 2em;
      }
    }
  }

  div.popup:target {
    display: flex;
  }

  div.popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;

    div.popup-content {
      background: #fff;
      padding: 20px;
      border-radius: 5px;
      text-align: center;
      position: fixed;

      h4.title {
        background: #EEE;
        width: 100%;
        margin: 0;
        line-height: 2em;

      }
    }
  }

  a.button, a.button:visited {
    position: absolute;
    top: 0.5em;
    right: 0.5em;
    text-decoration: none;
    background-color: #333;
    color: #FFF;
    border: 2px outset black;
    padding: 0.25em 0.5em;
    margin-right: 1em;
  }

  a.button:hover {
    text-decoration: underline;
  }

  a.button:active {
    border: 2px inset black;
  }
}