@import 'variables';

html {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;


    span.version {
      display: block;
    }

    span.level-color {
      span.common {
        color: $common-color;
      }
      span.uncommon {
        color: $uncommon-color;
      }
      span.rare {
        color: $rare-color;
      }
      span.epic {
        color: $epic-color;
      }
      span.legendary {
        color: $legendary-color;
      }
    }

    div.game-menu {


      nav {
        display: inline-block;
        position: absolute;
        top: 1em;
        right: 1em;
        border: none;
        ul {
          display: flex;
          justify-content: left;
          align-items: center;

          li {
            display: inline-block;
            list-style: none;

          }
        }
      }
    }
  }

  a, a:visited {
    color: blue
  }

  div.content {
    margin-left: 0.5em;
  }

  .player-card {
    display: block!important;
  }

  .section {
    display: inline-block;
    width: 25em;
    vertical-align: top;
    margin: 2em 3em 0 0;
    background-color: #FFF;
    border: 1px outset black;

    legend {
      font-weight: bold;
      font-variant: small-caps;
      font-size: larger;
      background-color: #EEE;
      border: 1px outset black;
    }

    ul {
      li {
        list-style: none;
        line-height: 2em;

        a, a:visited {
          text-decoration: none;
        }

        a:hover {
          text-decoration: underline;
        }
      }
    }
  }

  div.popup:target {
    display: flex;
  }

  div.popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;

    div.popup-content {
      background: #fff;
      padding: 20px;
      border-radius: 5px;
      text-align: center;
      position: fixed;

      h4.title {
        background: #EEE;
        width: 100%;
        margin: 0;
        line-height: 2em;

      }
    }
  }

  a.button, a.button:visited {
    position: absolute;
    top: 0.5em;
    right: 0.5em;
    text-decoration: none;
    background-color: #333;
    color: #FFF;
    border: 2px outset black;
    padding: 0.25em 0.5em;
    margin-right: 1em;
  }

  a.button:hover {
    text-decoration: underline;
  }

  a.button:active {
    border: 2px inset black;
  }
}