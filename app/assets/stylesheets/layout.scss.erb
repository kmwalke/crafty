@import 'variables';

@keyframes notice_fade {
  0% {
    height: 15em;
    opacity: 0%;
    margin-top: 0;
  }
  30% {
    height: 15em;
    opacity: 100%;
    margin-top: 0;
  }
  100% {
    height: 15em;
    opacity: 0%;
    margin-top: -2em;
  }
}


html {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
//  overflow: hidden;
  background-color: $game-bg-color;
  color: $game-text-color;
  font-family: Verdana, Arial, sans-serif;

  body {
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
//    overflow: hidden;

    div.notice {
      display: flex;
      position: fixed;
      top: 0;
      left: 50%;
      width: 20em;
      margin-left: -10em;
      height: 0em;
      opacity: 0%;
      justify-content: center;
      align-items: center;
      vertical-align: center;
      animation-name: notice_fade;
      animation-duration: 3s;

      div.notice-popup {
        background-color: $notice-bg-color;
        border: 1px outset $notice-border-color;
        width: 20em;
        height: 5em;
        text-align: center;
        vertical-align: middle;

        span {
          line-height: 5em;
          padding: 0;
          margin: 0
        }

      }
    }

    div.header {
      height: 7em;

      div.game-menu {
        display: inline-block;
        vertical-align: top;

        a.button:hover {
          text-shadow: 0 0 7px $game-text-color;
        }

        a.button {
          text-decoration: none;

          span {
            color: $menu-icon-color;
            display: block;
            font-size: 3em;
            letter-spacing: 0.1em;
            line-height: 0.35em;
          }
        }

        span.version {
          display: block;
        }
      }

      .player-card {
        display: inline-block;

        div.status {
          display: inline-block;
          vertical-align: top;

          span {
            display: block;
            text-transform: uppercase;
          }

          span.title {

          }

          span.value {
            font-size: larger;
          }
        }
      }

      table.bars:hover span.value {
        color: $game-text-color;
      }

      table.bars {
        display: inline-block;
        float: right;
        width: 50%;
        border-spacing: 0.5em;

        tbody {
          width: 100%;
          display: table;

          tr {
            td.title {
              float: right;
            }

            td.bar {
              border-radius: 0.6em;
              width: 90%;

              div.fill {
                border-radius: 0.5em;

                span.value {
                  margin-left: 1em;
                  text-wrap: nowrap;
                }
              }
            }
          }

          tr.energy {
            color: $energy-color;

            td.bar {
              border: 1px solid $energy-color;
              box-shadow: 0 0 5px $energy-color;

              div.fill {
                background-color: $energy-color;
              }
            }
          }

          tr.vitality {
            color: $vitality-color;

            td.bar {
              border: 1px solid $vitality-color;
              box-shadow: 0 0 5px $vitality-color;

              div.fill {
                background-color: $vitality-color;
              }
            }
          }

          tr.age {
            color: $age-color;

            td.bar{
              border: 1px solid $age-color;
              box-shadow: 0 0 5px $age-color;

              div.fill {
                background-color: $age-color;
              }
            }
          }
        }
      }
    }

    .level-color {
      .common, .common a {
        color: $common-color;
      }

      .uncommon, .uncommon a {
        color: $uncommon-color;
      }

      .rare, .rare a {
        color: $rare-color;
      }

      .epic, .epic a {
        color: $epic-color;
      }

      .legendary, .legendary a {
        color: $legendary-color;
      }
    }

    .status-mining {
      color: $red;
    }

    .status-traveling {
      color: $blue-light;
    }

    .status-resting {
      color: $green;
    }


    a, a:visited {
      color: $a_color;
      text-decoration: underline;
    }

    a:hover {
      text-decoration: none;
    }

    div.content {
      margin-left: 0.5em;
    }

    .controls-section {

      legend {
      }

      ul {
        li {
          list-style: none;
          line-height: 2em;
        }
      }
    }

    div.popup:target {
      display: flex;
    }

    div.popup {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      justify-content: center;
      align-items: center;

      div.popup-content {
        background: $popup-bg-color;
        border: 1px solid $popup-border-color;
        padding: 20px;
        border-radius: 5px;
        text-align: center;
        position: fixed;

        h4.title {
          background: $popup-title-bg-color;
          width: 100%;
          margin: 0;
          line-height: 2em;

        }
      }
    }

    a.close-button, a.close-button:visited {
      position: absolute;
      top: 0.5em;
      right: 0.5em;
      text-decoration: none;
      background-color: $close-button-bg-color;
      color: $close-button-text-color;
      border: 2px outset black;
      padding: 0.25em 0.5em;
      margin-right: 1em;
    }

    a.close-button:hover {
      text-decoration: underline;
    }

    a.close-button:active {
      border: 2px inset black;
    }
  }
}