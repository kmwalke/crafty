<fieldset class="player-card">
  <legend><%= @current_user.name %></legend>
  <div class="status">
    <span class="title">
      Status
    </span>
    <span class="value status-<%= @current_user.status.downcase %>">
      <%= @current_user.status %>
    </span>
  </div>
</fieldset>
<table class="bars">
  <tr class="energy">
    <td class="title">E</td>
    <td class="bar">
      <div class="fill">
        <%= @current_user.energy %>
      </div>
    </td>
  </tr>
  <tr class="vitality">
    <td class="title">V</td>
    <td class="bar">
      <div class="fill">
        87
      </div>
    </td>
  </tr>
  <tr class="age">
    <td class="title">A</td>
    <td class="bar">
      <div class="fill">
        32
      </div>
    </td>
  </tr>
</table>
