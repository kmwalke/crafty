<div class="player-card">
  <h2><%= @current_user.name %></h2>
  <span>Energy: <%= @current_user.energy %></span>
  <span>Status: <%= @current_user.status %></span>
</div>

<fieldset class="location">
  <legend>Location</legend>
  <h3><%= @current_user.location.name %></h3>
  <p><%= @current_user.location.description %></p>
  <% if @local_players.any? %>
    <span>Local Players:</span>
    <ul>
      <% @local_players.each do |player| %>
        <li><%= player.name %></li>
      <% end %>
    </ul>
  <% end %>
</fieldset>

<fieldset class="inventory">
  <legend>Inventory</legend>
  <ul>
    <% @current_user.inventory.items.each do |item| %>
      <li><a href="#item-<%= item.id %>-details"><%= item.name %></a></li>
      <div id="item-<%= item.id %>-details" class="popup">
        <div class="popup-content">
          <a href="#" class="close">X</a>
          <h4 class="name"><%= item.name %></h4>
          <% if item.type == Vehicle.name %>
            <%= link_to 'Equip', equip_item_path(item) %>
          <% end %>
          <span class="level"><%= item.level %></span>
          <span class="created-by"><%= item.created_by.name %></span>
          <p class="description"><%= item.description %></p>
        </div>
      </div>
    <% end %>
  </ul>
</fieldset>

<fieldset class="actions">
  <legend>Actions</legend>
  <ul>
    <% @current_user.actions.each do |action| %>
      <li><a href="#<%= action %>-popup"><%= action.capitalize %></a></li>
      <div id="<%= action %>-popup" class="popup">
        <div class="popup-content">
          <a href="#" class="close">X</a>
          <%= render partial: "#{action}_popup", locals: { current_user: @current_user} %>
        </div>
      </div>
    <% end %>
  </ul>
</fieldset>

<fieldset class="equipment">
  <legend>Equipment</legend>
  <ul>
    <% if @current_user.vehicle %>
      <li>Vehicle: <%= @current_user.vehicle.name %></li>
    <% end %>
  </ul>
</fieldset>

