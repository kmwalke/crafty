<input type="radio" id="radio-equipment" name="radios" value="equipment"/>
<div class="section equipment">
  <label for="radio-equipment" class="radio">E</label>
  <div class="section-content">
    <h4 class="section-title">Equipment</h4>
    <table>
      <tr>
        <td>Tool:</td>
        <td>
          <% if player.tool %>
            <%= level_color_span(player.tool.level, player.tool.name) %>
          <% end %>
        </td>
        <td>
          <% if player.tool %>
            <%= link_to 'X', unequip_tool_path, id: 'unequip_tool' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Vehicle:</td>
        <td>
          <% if player.vehicle %>
            <%= level_color_span(player.vehicle.level, player.vehicle.name) %>
          <% end %>
        </td>
        <td>
          <% if player.vehicle %>
            <%= link_to 'X', unequip_vehicle_path, id: 'unequip_vehicle' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Instrument:</td>
        <td></td>
      </tr>
      <tr>
        <td>Clothes:</td>
        <td></td>
      </tr>
    </table>
  </div>
</div>
