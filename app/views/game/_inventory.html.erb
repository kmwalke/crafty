<input type="radio" id="radio-inventory" name="radios" value="inventory"/>
<div class="section inventory">
  <label for="radio-inventory" class="radio">I</label>
  <div class="section-content">
    <h4 class="section-title">Inventory</h4>
    <span class="remaining-space"><%= player.inventory.remaining_space %></span>
    <ul>
      <li class="credits">Credits: <%= player.credits %><%= credit_symbol %></li>
      <% player.inventory.items.each do |item| %>
        <li data-turbo="false">
          <span class="stack-amount"><%= stack_amount(item) %></span>
          <%= level_color_span(item.level, link_to(item.full_name, "#item-#{ item.id }-details")) %>
        </li>
        <%= render partial: 'item_popup', locals: { item: } %>
      <% end %>
    </ul>
  </div>
</div>
