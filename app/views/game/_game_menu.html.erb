<div class="game-menu">
  <a href="#game-menu-popup" class="button" data-turbo="false">
    <span>...</span>
    <span>...</span>
    <span>...</span>
  </a>
  <div id="game-menu-popup" class="popup">
    <div class="popup-content game-menu-popup">
      <%= link_to 'X', game_path, class: 'close-button', data: { turbo_target: '_top' } %>
      <h4 class="title">Game Menu</h4>
      <span class="version">Version 0.1</span><span>build_<%= ENV['HEROKU_RELEASE_VERSION'] %></span>
      <ul class="links">
        <% if current_user -%>
          <li><a href="#">Settings</a></li>
          <li><%= link_to 'Upcoming Changes', project_management_path %></li>
          <li><%= link_to 'Vision Board', vision_board_path %></li>
          <li><%= link_to 'Log Out', logout_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
