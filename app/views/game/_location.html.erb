<span class="title">
    <span class="name" style="
    color: <%= @current_location.bg_color %>;
      <% if @current_location.highlight_color %>
      text-shadow: 0 0 4px <%= @current_location.highlight_color %>;
      <% end %>
    ">
      <%= @current_location.name %>
    </span>
    <span class="type">
      &lt;<%= @current_location.type %>&gt;
    </span>
  </span>
<p class="description"><%= @current_location.description %></p>
<div class="viewport">
  <div class="sky" style="
  background-color: <%= sky_color(@current_location) %>;
  ">
    &nbsp;
  </div>
  <div class="ground" style="
  background-color: <%= @current_location.bg_color %>;
  ">
    &nbsp;
  </div>
</div>
