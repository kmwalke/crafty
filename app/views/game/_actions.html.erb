<input type="radio" id="radio-actions" name="radios" value="actions" checked/>
<div class="section actions">
  <label for="radio-actions">A</label>
  <div class="section-content">
    <h4 class="section-title">Actions</h4>
    <ul>
      <li><%= link_to 'Drink a Monster Energy', monster_energy_path, data: turbo_hash %></li>
      <% @current_user.actions.each do |action| %>
        <li><%= link_to action.capitalize, "##{ action }-popup" %></li>
        <%= render partial: 'action_popup', locals: { action: action } %>
      <% end %>
    </ul>
  </div>
</div>
